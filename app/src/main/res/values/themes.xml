<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeManagerApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/darkHighlight</item>
        <item name="colorPrimaryVariant">@color/lightHighlight</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.HomeManagerApp.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/darkHighlight</item>
        <item name="colorPrimaryVariant">@color/lightHighlight</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.HomeManagerApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.HomeManagerApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>