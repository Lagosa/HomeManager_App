<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp">

    <Button
        android:id="@+id/planDishCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan a dish"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtPlannedDishesStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Start date"
                android:minHeight="48dp"
                android:textColor="@color/darkHighlight"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtPlannedDishesStartWrapper"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:ems="10"
                android:inputType="textPersonName" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtPlannedDishesEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="End date"
                android:minHeight="48dp"
                android:textColor="@color/darkHighlight"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtPlannedDishesEndWrapper"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:ems="10"
                android:inputType="textPersonName" />


        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Planned dishes:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plannedDishesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>
</LinearLayout>