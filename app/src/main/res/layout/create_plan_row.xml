<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spnAddPlanDishName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:autofillHints="Type"
            android:dropDownWidth="match_parent"
            android:minHeight="48dp"
            android:popupBackground="@color/white"
            android:textColor="#262B54" />

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtPlannedDishesCreateDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Day to cook"
                android:minHeight="48dp"
                android:textColor="@color/darkHighlight"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtPlannedDishesCreateDayWrapper"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:ems="10"
                android:inputType="text" />


        </FrameLayout>

        <TextView
            android:id="@+id/planDishCreateDishId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:visibility="invisible"/>



    </LinearLayout>
</LinearLayout>